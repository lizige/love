<!--index.wxml-->
<view class="container">
  <view class='code'>
     <text class="comments">{{code_comments}}</text>
     <text class='coding'>{{code}}</text>
  </view>
  <view class="loveHeart">
      <canvas canvas-id='garden' disable-scroll='false' style='width:100%;height:350px'></canvas>
      <view class='words'  animation="{{animationData}}" >
            <text>贺婷, we've been in love for</text> 
            <text class='elapseClock'>
              <text class='digit'>{{days}}</text> 天 <text class='digit'>{{hours}}</text> 小时 <text class='digit'>{{minutes}}</text> 分钟 <text class='digit'>{{seconds}} 秒</text>
            </text>
            <text class='loveu'>Until the end of the world.</text>
            <text class='signature'>- 李子</text>
      </view>
  </view>
</view>
