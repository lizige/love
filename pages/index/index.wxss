.container {
    background-color: #FFFFEE;
}

/**index.wxss**/
.code {
    color: #333;
    font-family: "Consolas", "Monaco", "Bitstream Vera Sans Mono", "Courier New", "sans-serif";
    font-size: 12px;
    flex-direction: column;
    width: 100%;
}

.comments {
    color: #2a36ff;
}

.loveHeart {
    width: 100%;
    height: 500px;
    position: relative;
    top: 0px;
    left: 0px;
}

.words {
    position: absolute;
    left: 22px;
    font-family: "sans-serif";
    width: 100%;
    font-size: 12px;
    color: #666;
    display: flex;
    flex-direction: column;
    opacity: 0;
    top: 100px;
}

.elapseClock {
    font-size: 12px;
    text-align: right;
    flex-direction: row;
    margin-right: 70px;
}

#elapseClock .digit {
    font-family: "digit";
    font-size: 14px;
}

.loveu {
    font-size: 12px;
    text-align: center;
}

.signature {
    text-align: right;
    margin-right: 65px;
    font-size: 12px;
    font-style: italic;
}